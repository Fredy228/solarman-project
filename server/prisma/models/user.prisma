model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  email    String @unique
  name     String
  password String

  role      Role
  isBlocked Boolean @default(false)

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  devices UserDevice[]
}

enum Role {
  ADMIN
  ANALYST
  MODERATOR
}
